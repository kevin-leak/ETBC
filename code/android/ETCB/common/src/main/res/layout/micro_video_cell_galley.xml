<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="3dp"
    app:cardBackgroundColor="#ffff">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/im_image"
        android:layout_width="@dimen/video_width"
        android:layout_height="@dimen/video_width"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:riv_corner_radius="3dp"
        android:layout_gravity="center_vertical"/>

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:button="@drawable/sel_cb_circle"
        android:clickable="false"
        android:drawablePadding="0dp"
        android:enabled="false"
        android:padding="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019/0/1"
        android:textSize="18sp"
        android:textColor="#525151"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="@dimen/tv_margin"
        android:layout_marginStart="@dimen/tv_margin" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tv_margin"
        android:layout_marginStart="@dimen/tv_margin"
        android:text="2019/0/1"
        android:layout_marginBottom="12dp"
        android:textColor="#8A8686"
        android:layout_gravity="bottom"/>

</android.support.v7.widget.CardView>
