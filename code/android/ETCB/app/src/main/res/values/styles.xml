<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Base" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/etcb</item>
        <item name="colorPrimaryDark">@color/etcb</item>
        <item name="colorAccent">@color/etcb</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="android:screenOrientation">portrait</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">
            @color/secondWindowBackgroundColor
        </item>
        <item name="actionMenuTextColor">@color/black</item>
        <!--设置没有toolbar-->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TransStatusBar.Base" parent="Theme.Base">
        <!--去除顶部的状态栏-->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="AppTheme.LaunchActivity" parent="Theme.Base">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/white</item>
        <!--<item name="windowActionBar">false</item>-->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.MicroUp" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">portrait</item>
        <!--设置没有toolbar-->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.DefaultActivity" parent="AppTheme">
        <item name="android:statusBarColor" tools:ignore="NewApi">
            @color/secondWindowBackgroundColor
        </item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <!--NavigationIcon的宽度-->
        <item name="toolbarStyle">@style/BaseToolbarStyle</item>
    </style>

    <!--view的样式-->
    <style name="topRL">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/len_0</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="topImage">
        <item name="android:layout_height">@dimen/len_50</item>
        <item name="android:layout_width">@dimen/len_50</item>
        <item name="android:layout_marginTop">@dimen/len_5</item>
        <item name="android:layout_marginLeft">@dimen/len_10</item>
        <item name="android:layout_marginRight">@dimen/len_10</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="topText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/len_15</item>
        <item name="android:textColor">#717070</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>


    <!--mine 里面-->

    <style name="mine_record">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/len_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/mine_item_border</item>
    </style>

    <style name="mine_record_image">
        <item name="android:layout_height">@dimen/len_50</item>
        <item name="android:layout_width">@dimen/len_50</item>
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="mine_record_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/gray</item>

    </style>

    <!--item do-->
    <style name="mine_do_card">
        <item name="android:layout_height">@dimen/len_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">@dimen/len_0</item>
        <item name="cardElevation">@dimen/len_2</item>
        <item name="cardBackgroundColor">@color/secondWindowBackgroundColor</item>
    </style>

    <style name="mine_do_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/secondWindowBackgroundColor</item>
        <item name="android:paddingLeft">@dimen/len_10</item>
    </style>

    <style name="mine_do_image">
        <item name="android:layout_height">@dimen/len_30</item>
        <item name="android:layout_width">@dimen/len_30</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="mine_do_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">@dimen/len_10</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/len_40</item>
        <item name="android:textSize">@dimen/fon_16</item>
        <item name="android:drawableRight">@drawable/more_gray</item>
    </style>

    <style name="mine_do_add_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/len_1</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/len_35</item>
        <item name="android:textSize">@dimen/fon_16</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <!--    自定义的toolbar back -->
    <style name="myToolBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/gray</item>
    </style>

    <style name="AppTheme.BarDefaultTheme" parent="AppTheme.TransStatusBar.Base">
        <!--NavigationIcon的宽度-->
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
        <!--NavigationIcon的宽度-->
        <item name="toolbarStyle">@style/BaseToolbarStyle</item>
    </style>

    <!--标题栏返回按钮样式-->
    <style name="ToolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">16dp</item>
    </style>

    <!--标题栏的样式-->
    <style name="BaseToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <!--内容距离开始 边距-->
        <item name="contentInsetStart">8dp</item>
        <!--内容距离 导航按钮 边距-->
        <item name="contentInsetStartWithNavigation">8dp</item>
        <!--使自定义view可以贴左右的边，多数版本的系统不要下面两句也可以，但少量版本必须加下面的两句-->
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">3dp</item>
        <!--右内边距-->
        <item name="android:paddingRight">2dp</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/blackLess</item>
        <item name="titleTextColor">@color/blackLess</item>
    </style>

    <style name="carCheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox" tools:targetApi="lollipop">
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>


    <!--    up bookModelView-->

    <style name="UpBookText">
        <item name="android:textColor">@color/grayer</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/len_60</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/len_15</item>
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
        <item name="android:drawablePadding">@dimen/len_20</item>
        <item name="android:background">@drawable/shape_frame</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="SpnStyle">
        <item name="colorControlNormal">#ffffff</item>
    </style>


    <!--    account -->
    <style name="account_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/len_60</item>
        <item name="android:background">@color/secondWindowBackgroundColor</item>
    </style>

    <style name="account_image">
        <item name="android:layout_height">@dimen/len_30</item>
        <item name="android:layout_width">@dimen/len_30</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="account_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">@dimen/len_10</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/textSecond</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/len_40</item>
        <item name="android:layout_marginBottom">@dimen/len_15</item>
        <item name="android:textSize">@dimen/fon_16</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>


    <!--  attic holder text -->
    <style name="attic_holder_text">
        <item name="android:layout_height">@dimen/len_50</item>
        <item name="android:layout_width">@dimen/len_50</item>
        <item name="android:layout_marginTop">@dimen/len_16</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- modify EditTextView underline -->
    <style name="modify_edit_view" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/material_blue</item>
        <item name="colorControlActivated">@color/colorBlue</item>
    </style>


    <!--    shopActivity -->

    <style name="shop_card">
        <item name="android:layout_height">@dimen/len_50</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">@dimen/len_0</item>
        <item name="cardElevation">@dimen/len_2</item>
        <item name="cardBackgroundColor">@color/thirdWindowBackgroundColor</item>
    </style>

    <style name="shop_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/len_10</item>
    </style>

    <style name="shop_image">
        <item name="android:layout_height">@dimen/len_30</item>
        <item name="android:layout_width">@dimen/len_30</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="shop_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">@dimen/len_10</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/len_40</item>
        <item name="android:textSize">@dimen/fon_16</item>
        <item name="android:drawableRight">@drawable/more_gray</item>
    </style>


    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorBlue</item>
        <item name="colorSwitchThumbNormal">@color/grayer</item>
        <item name="android:colorForeground">@color/grayer</item>
    </style>

    <style name="SwitchCompat.Text" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/len_9</item>
    </style>


</resources>
