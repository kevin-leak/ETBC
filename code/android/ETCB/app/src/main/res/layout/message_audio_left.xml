<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <club.crabglory.www.common.widget.AvatarView
        android:id="@+id/av_avatar"
        android:layout_width="@dimen/len_40"
        android:layout_height="@dimen/len_40"
        android:layout_margin="@dimen/len_10"
        android:scaleType="centerCrop"
        android:src="@mipmap/avatar"
        app:riv_oval="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_20"
        android:layout_marginEnd="@dimen/len_80"
        android:layout_marginRight="@dimen/len_80"
        android:layout_marginBottom="@dimen/len_5"
        android:background="@drawable/message_left_item"
        android:layout_toEndOf="@id/av_avatar"
        android:layout_toRightOf="@id/av_avatar"
        android:elevation="@dimen/len_4"
        android:orientation="horizontal"
        tools:ignore="HardcodedText,UnusedAttribute">

        <club.crabglory.www.common.widget.record.VoiceImageView
            android:id="@+id/viv_voice"
            android:layout_width="@dimen/len_40"
            android:layout_height="@dimen/len_40"
            android:scaleType="centerCrop"
            android:padding="@dimen/len_10"
            android:src="@drawable/chat_voice_left">

        </club.crabglory.www.common.widget.record.VoiceImageView>


        <TextView
            android:id="@+id/tv_voice_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/len_10"
            android:text="4''"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


</RelativeLayout>