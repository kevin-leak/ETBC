<?xml version="1.0" encoding="utf-8"?>
<club.crabglory.www.common.widget.FixConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/len_0"
        app:cardBackgroundColor="@color/alpha"
        app:cardElevation="@dimen/len_0"
        tools:ignore="MissingConstraints"
        tools:targetApi="lollipop">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_40"
            android:background="@color/thirdWindowBackgroundColor"
            android:elevation="@dimen/len_0"
            app:theme="@style/myToolBar"
            app:title=" "
            app:titleTextColor="@color/gray">

        </android.support.v7.widget.Toolbar>

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.03"
        android:background="@mipmap/shop_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/thirdWindowBackgroundColor"
                android:paddingTop="@dimen/len_10"
                android:paddingBottom="@dimen/len_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_video_show"
                    android:layout_width="@dimen/len_95"
                    android:layout_height="@dimen/len_125"
                    app:cardElevation="@dimen/len_1"
                    app:cardCornerRadius="@dimen/len_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <club.crabglory.www.common.widget.AvatarView
                        android:id="@+id/riv_goods"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/test_jane_eyre" />

                    <ImageView
                        android:layout_width="@dimen/len_30"
                        android:layout_height="@dimen/len_30"
                        android:layout_gravity="center"
                        android:elevation="@dimen/len_1"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_live_profile_play" />

                </android.support.v7.widget.CardView>

                <ImageView
                    android:layout_width="@dimen/len_20"
                    android:layout_height="@dimen/len_20"
                    android:layout_marginEnd="@dimen/len_15"
                    android:layout_marginRight="@dimen/len_15"
                    android:layout_marginTop="@dimen/len_5"
                    android:src="@drawable/book_author"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.15"
                    app:layout_constraintStart_toEndOf="@id/cv_video_show"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/book_title"
                        android:textSize="@dimen/font_20" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/len_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Author："
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_18" />

                        <TextView
                            android:id="@+id/tv_author_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/len_100"
                            android:text="@string/author"
                            android:textSize="@dimen/font_18" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/len_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="TYPE："
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_18" />

                        <TextView
                            android:id="@+id/tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="@string/book_type_education"
                            android:textSize="@dimen/font_18" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/len_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="Count："
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font_18" />

                        <TextView
                            android:id="@+id/tv_count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="100"
                            android:textSize="@dimen/font_18" />

                    </LinearLayout>

                </LinearLayout>


            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/len_20"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">


                <android.support.v7.widget.CardView
                    android:id="@+id/cv_author"
                    style="@style/shop_card"
                    android:layout_marginLeft="@dimen/len_5"
                    android:layout_marginRight="@dimen/len_5"
                    app:cardElevation="@dimen/len_0"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout style="@style/shop_rl">

                        <club.crabglory.www.common.widget.AvatarView
                            android:id="@+id/avi_upper"
                            style="@style/shop_image"
                            android:background="@drawable/mine_do_border"
                            android:contentDescription="@string/message"
                            android:src="@mipmap/avatar"
                            app:riv_oval="true" />

                        <TextView
                            android:id="@+id/tv_upper_name"
                            style="@style/shop_text"
                            android:text="@string/upper" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_message"
                    style="@style/shop_card"
                    android:layout_marginLeft="@dimen/len_5"
                    android:layout_marginRight="@dimen/len_5"
                    app:cardElevation="@dimen/len_0"
                    app:layout_constraintTop_toBottomOf="@+id/cv_micro"
                    tools:ignore="MissingConstraints">

                    <RelativeLayout style="@style/shop_rl">

                        <ImageView
                            style="@style/shop_image"
                            android:contentDescription="@string/message"
                            android:src="@drawable/mine_message" />

                        <TextView
                            style="@style/shop_text"
                            android:text="@string/message" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_10"
                    android:padding="@dimen/len_5"
                    android:text="@string/bookDescription"
                    android:textSize="@dimen/len_20" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/len_15"
                    android:paddingTop="@dimen/len_5"
                    android:paddingRight="@dimen/len_15"
                    android:text="@string/description"
                    android:textColor="@color/textPrimary"
                    android:textSize="@dimen/font_16"
                    tools:targetApi="p" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_settlement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/secondWindowBackgroundColor"
        app:cardElevation="@dimen/len_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shop_top_border">


            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="@string/count"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_quantity"
                android:layout_width="@dimen/len_100"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/tv"
                android:layout_toRightOf="@+id/tv"
                android:background="@null"
                android:inputType="number"
                android:text="@string/count_goods"
                android:textColor="@color/colorBlue" />

            <ImageButton
                android:id="@+id/ib_add_car"
                android:layout_width="@dimen/len_60"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/len_0_1"
                android:layout_toLeftOf="@id/btn_pay"
                android:background="@color/colorGreen"
                android:gravity="center"
                android:src="@drawable/shop_car"
                android:textSize="@dimen/font_15"
                android:layout_marginEnd="@dimen/len_0_1"
                android:layout_toStartOf="@id/btn_pay" />

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="@dimen/len_80"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@color/orange"
                android:gravity="center"
                android:text="@string/pay"
                android:textColor="@color/white"
                android:textSize="@dimen/font_18"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</club.crabglory.www.common.widget.FixConstraintLayout>