<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <club.crabglory.www.common.widget.AvatarView
        android:id="@+id/av_avatar"
        android:layout_width="@dimen/len_40"
        android:layout_height="@dimen/len_40"
        android:layout_margin="@dimen/len_10"
        android:scaleType="centerCrop"
        android:src="@mipmap/avatar"
        app:riv_oval="true"/>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/len_20"
        android:layout_marginBottom="@dimen/len_5"
        android:layout_toEndOf="@id/av_avatar"
        android:layout_toRightOf="@id/av_avatar"
        android:background="@drawable/message_left_item"
        android:elevation="@dimen/len_4"
        android:minHeight="@dimen/portraitSize"
        android:padding="@dimen/len_10"
        tools:targetApi="lollipop">

        <ImageView
            android:id="@+id/im_image"
            android:layout_width="@dimen/len_70"
            android:layout_height="@dimen/len_76"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/test_jane_eyre"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

    </FrameLayout>

</RelativeLayout>