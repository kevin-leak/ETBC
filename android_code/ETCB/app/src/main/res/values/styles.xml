<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Base" parent="Theme.AppCompat" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/windowBackgroundColor</item>
        <item name="colorPrimaryDark">@color/windowBackgroundColor</item>
        <item name="colorAccent">@color/windowBackgroundColor</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>

        <item name="android:textColor">@color/black</item>

        <!--设置没有toolbar-->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Base">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TransStatusBar.Base" parent="Theme.Base">
        <!--去除顶部的状态栏-->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="AppTheme.LaunchActivity" parent="Theme.Base">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/white</item>
        <!--<item name="windowActionBar">false</item>-->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.MainActivity" parent="AppTheme">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/secondWindowBackgroundColor</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>



    <!--view的样式-->

    <style name="topRL">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/len_0</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="topImage">
        <item name="android:layout_height">@dimen/len_50</item>
        <item name="android:layout_width">@dimen/len_50</item>
        <item name="android:layout_marginTop">@dimen/len_5</item>
        <item name="android:layout_marginLeft">@dimen/len_10</item>
        <item name="android:layout_marginRight">@dimen/len_10</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="topText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/len_15</item>
        <item name="android:textColor">#717070</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
    </style>


    <!--mine 里面-->

    <style name="mine_record">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">@dimen/len_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/mine_item_border</item>
    </style>

    <style name="mine_record_image">
        <item name="android:layout_height">@dimen/len_50</item>
        <item name="android:layout_width">@dimen/len_50</item>
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="mine_record_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    
    <!--item do-->
    <style name="mine_do_card">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="cardCornerRadius">@dimen/len_0</item>
        <item name="cardElevation">@dimen/len_2</item>
        <item name="cardBackgroundColor">@color/secondWindowBackgroundColor</item>
    </style>
    <style name="mine_do_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/len_50</item>
        <item name="android:paddingLeft">@dimen/len_10</item>
    </style>
    <style name="mine_do_image">
        <item name="android:layout_height">@dimen/len_30</item>
        <item name="android:layout_width">@dimen/len_30</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="mine_do_text">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingRight">@dimen/len_10</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/len_40</item>
        <item name="android:textSize">@dimen/fon_16</item>
        <item name="android:drawableRight">@drawable/more_gray</item>
    </style>


    <dimen name="len_45">45dp</dimen>
</resources>
