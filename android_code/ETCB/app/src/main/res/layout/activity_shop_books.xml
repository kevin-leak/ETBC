<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondWindowBackgroundColor"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/len_0"
        android:elevation="@dimen/len_0"
        tools:ignore="MissingConstraints"
        tools:targetApi="lollipop">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:elevation="@dimen/len_0"
            android:layout_height="@dimen/toolBarDefault"
            android:background="@color/secondWindowBackgroundColor"
            app:theme="@style/myToolBar"
            app:title=" "
            app:titleTextColor="@color/gray" >

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/font_20"
                android:text="@string/details" />

        </android.support.v7.widget.Toolbar>

    </android.support.v7.widget.CardView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/len_10"
        android:background="@color/secondWindowBackgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="@dimen/len_20"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_video_show"
            android:layout_width="@dimen/len_120"
            android:layout_height="@dimen/len_160"
            app:cardCornerRadius="@dimen/len_5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.05">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/test_jane_eyre" />

            <ImageView
                android:layout_width="@dimen/len_40"
                android:layout_height="@dimen/len_40"
                android:layout_gravity="center"
                android:elevation="@dimen/len_1"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_live_profile_play" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cv_video_show"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/book_title"
                android:textSize="@dimen/font_24" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="TYPE："
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Technology"
                    android:textSize="@dimen/font_18" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Count："
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="100"
                    android:textSize="@dimen/font_18" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Price："
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="100$"
                    android:textSize="@dimen/font_18" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/len_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Time："
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_18" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="2019-08-19"
                    android:textSize="@dimen/font_18" />

            </LinearLayout>


        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/secondWindowBackgroundColor"
        android:orientation="vertical"
        android:paddingBottom="@dimen/len_20"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_author"
            style="@style/mine_do_card"
            android:layout_marginLeft="@dimen/len_5"
            android:layout_marginRight="@dimen/len_5"
            app:cardElevation="@dimen/len_0"
            tools:ignore="MissingConstraints">

            <RelativeLayout style="@style/mine_do_rl">

                <com.makeramen.roundedimageview.RoundedImageView
                    style="@style/mine_do_image"
                    android:background="@drawable/mine_do_border"
                    android:contentDescription="@string/message"
                    android:src="@mipmap/avatar"
                    app:riv_oval="true" />

                <TextView
                    style="@style/mine_do_text"
                    android:text="@string/author" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_message"
            style="@style/mine_do_card"
            android:layout_marginLeft="@dimen/len_5"
            android:layout_marginRight="@dimen/len_5"
            app:cardElevation="@dimen/len_0"
            app:layout_constraintTop_toBottomOf="@+id/cv_micro"
            tools:ignore="MissingConstraints">

            <RelativeLayout style="@style/mine_do_rl">

                <ImageView
                    style="@style/mine_do_image"
                    android:contentDescription="@string/message"
                    android:src="@drawable/mine_message" />

                <TextView
                    style="@style/mine_do_text"
                    android:text="@string/message" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_10"
            android:padding="@dimen/len_5"
            android:text="@string/bookDescription"
            android:textSize="@dimen/len_25" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/len_15"
            android:paddingTop="@dimen/len_5"
            android:paddingRight="@dimen/len_15"
            android:text="@string/description"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_18"
            tools:targetApi="p" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/len_5"
        app:cardBackgroundColor="@color/secondWindowBackgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shop_top_border">


            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="@string/count"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/et_quantity"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@+id/tv"
                android:layout_toRightOf="@+id/tv"
                android:background="@null"
                android:textColor="@color/etcb" />

            <ImageButton
                android:id="@+id/ib_add_car"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@color/colorGreen"
                android:gravity="center"
                android:src="@drawable/shop_car"
                android:text="加入购物车"
                android:textSize="15dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>