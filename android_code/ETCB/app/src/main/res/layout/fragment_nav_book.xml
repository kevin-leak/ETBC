<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/searchBarSize"
        android:background="@color/secondWindowBackgroundColor"
        android:elevation="@dimen/len_2"
        android:outlineProvider="bounds"
        app:elevation="0dp"
        tools:targetApi="lollipop">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/len_20"
            android:paddingTop="@dimen/len_10"
            android:paddingBottom="@dimen/len_10"
            android:paddingRight="@dimen/len_20">

            <android.support.v7.widget.SearchView
                android:id="@+id/sv_Search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_search_second" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_width="match_parent"
        android:paddingRight="@dimen/len_10"
        android:paddingLeft="@dimen/len_10"
        android:paddingBottom="@dimen/len_5"
        android:paddingTop="@dimen/len_7"
        android:layout_marginTop="@dimen/len_0_5"
        android:layout_height="@dimen/len_100"
        android:background="@color/secondWindowBackgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/topImage"
                android:padding="@dimen/len_3"
                android:src="@drawable/top_teach" />

            <TextView
                style="@style/topText"
                android:text="@string/teach" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/topImage"
                android:src="@drawable/top_economic" />

            <TextView
                style="@style/topText"
                android:text="@string/economic" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/topImage"
                android:src="@drawable/top_society" />

            <TextView
                style="@style/topText"
                android:text="@string/society" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/topImage"
                android:padding="@dimen/len_3"
                android:src="@drawable/top_science" />

            <TextView
                style="@style/topText"
                android:text="@string/science" />

        </RelativeLayout>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_select">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_special"
                android:paddingRight="@dimen/len_20"
                android:paddingLeft="@dimen/len_20"
                android:layout_marginTop="@dimen/len_0_5"
                android:paddingTop="@dimen/len_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondWindowBackgroundColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/special_today"
                    android:typeface="monospace"
                    android:textSize="@dimen/len_20"
                    android:textColor="#2e2e2e"
                    tools:ignore="SpUsage" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_special"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/len_150dp"
                    android:layout_marginTop="@dimen/len_40">

                </android.support.v7.widget.RecyclerView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:paddingTop="@dimen/len_25"
                android:paddingRight="@dimen/len_20"
                android:paddingLeft="@dimen/len_20"
                android:background="@color/secondWindowBackgroundColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rl_special">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/random_flow_book"
                        android:typeface="monospace"
                        android:textSize="@dimen/len_20"
                        android:textColor="#2e2e2e"
                        tools:ignore="SpUsage"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/len_10" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_random"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/len_40">

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>