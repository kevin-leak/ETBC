<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/secondWindowBackgroundColor">


        <ImageView
            android:id="@+id/iv_goods_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_200"
            android:src="@mipmap/test_jane_eyre"
            android:scaleType="fitCenter"/>
        
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="name"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            tools:ignore="HardcodedText,RtlSymmetry" />

        <TextView
            android:id="@+id/tv_goods_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginTop="0.5dp"
            android:text="info"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            tools:ignore="HardcodedText,RtlSymmetry" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal"
            android:background="@color/colorWhite">


            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="单价"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                tools:ignore="RtlSymmetry" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/secondWindowBackgroundColor"/>

            <TextView
                android:id="@+id/tv_goods_account"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="数量"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textSize="20sp"
                android:layout_gravity="center_vertical" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0.5dp"
            android:orientation="horizontal"
            android:background="@color/colorWhite">


            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="联系方式"
                android:paddingStart="8dp"
                android:paddingLeft="8dp"
                android:textSize="20sp"
                tools:ignore="HardcodedText"
                android:layout_gravity="center_vertical" />

            <ImageButton
                android:id="@+id/ib_phone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:src="@drawable/shop_phone" />

            <ImageButton
                android:id="@+id/ib_message"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:src="@drawable/shop_msg" />

        </LinearLayout>


    </LinearLayout>

    <!--结算-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="0"
        android:background="@color/colorWhite">


        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量："
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:textAlignment="center"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/et_quantity"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/tv"
            android:background="@null"
            android:layout_toRightOf="@+id/tv" />

        <ImageButton
            android:id="@+id/ib_add_car"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#83ae46"
            android:gravity="center"
            android:text="加入购物车"
            android:src="@drawable/shop_add_car"
            android:textSize="15dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>



</RelativeLayout>