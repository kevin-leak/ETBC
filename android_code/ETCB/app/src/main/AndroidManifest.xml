<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="club.crabglory.www.etcb">
    <uses-feature android:glEsVersion="0x00020000" android:required="true"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/etcb_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/etcb_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".frags.chat.ChatActivity"
            android:theme="@style/AppTheme.BarDefaultTheme"/>
        <activity android:name=".frags.account.AccountActivity"
            android:theme="@style/AppTheme.BarDefaultTheme" />
        <activity android:name=".frags.display.VideoShowActivity"
            android:theme="@style/AppTheme.BarDefaultTheme" />
        <activity android:name=".frags.book.UploadBookActivity"
            android:theme="@style/AppTheme.BarDefaultTheme"/>
        <activity android:name=".frags.SearchActivity" />
        <activity android:name=".frags.LiveActivity" />
        <activity android:name=".frags.chat.MessageActivity"
            android:theme="@style/AppTheme.DefaultActivity"/>
        <activity android:name=".frags.MicroUpActivity" />
        <activity android:name=".frags.consume.CarActivity"
            android:theme="@style/AppTheme.BarDefaultTheme"/>
        <activity android:name=".frags.chat.ForkActivity"
            android:theme="@style/AppTheme.DefaultActivity"/>
        <activity android:name=".frags.SettingsActivity"
            android:theme="@style/AppTheme.BarDefaultTheme" />
        <activity android:name=".frags.consume.PayActivity"
            android:theme="@style/AppTheme.DefaultActivity"/>
        <activity android:name=".frags.display.MineProfileActivity"
            android:theme="@style/AppTheme.BarDefaultTheme"/>
        <activity android:name=".frags.display.MineDisplayActivity"
            android:theme="@style/AppTheme.BarDefaultTheme"/>
        <activity
            android:name=".frags.book.BooksShopActivity"
            android:theme="@style/AppTheme.DefaultActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.DefaultActivity" />
        <activity
            android:name=".LaunchActivity"
            android:theme="@style/AppTheme.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".frags.book.BooksActivity"
            android:theme="@style/AppTheme.DefaultActivity" />
    </application>

</manifest>